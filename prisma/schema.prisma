// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id            String      @id @default(cuid())
    email         String      @unique
    username      String      @unique
    name          String?
    registerDate  DateTime
    image         String?
    bio           String?
    location      String?
    emailVerified Boolean?
    reviews       Review[]
    purchased     Purchased[]
}

model Game {
    id           String      @id @default(cuid())
    name         String      @unique
    image        String
    description  String
    price        Float
    salePrice    Float
    rating       Float
    releaseDate  String
    genre        String
    developer    String
    minSystemReq String?
    recSystemReq String?
    reviews      Review[]
    purchased    Purchased[]
}

model Review {
    id      String  @id @default(cuid())
    title   String
    stars   String
    comment String
    User    User?   @relation(fields: [userId], references: [id])
    userId  String?
    Game    Game?   @relation(fields: [gameId], references: [id])
    gameId  String?
}

model Purchased {
    id            String  @id @default(cuid())
    purchaseDate  String
    purchasePrice String
    User          User?   @relation(fields: [userId], references: [id])
    userId        String?
    Game          Game?   @relation(fields: [gameId], references: [id])
    gameId        String?
}
